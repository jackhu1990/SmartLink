<?xml version="1.0" encoding="utf-8"?>
<plugin id="com.nodehope.ecloud.cordova" version="0.0.1" 
        xmlns="http://apache.org/cordova/ns/plugins/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <name>SmartLink</name>
    <description>对wifi模块厂家硬件sdk封装成cordova</description>
    <js-module name="SmartLink" src="www/SmartLink.js">
        <clobbers target="cordova.plugins.SmartLink"/>
    </js-module>
    <platform name="android">
        <config-file parent="/*" target="res/xml/config.xml">
            <feature name="SmartLink">
                <param name="android-package" value="com.nodehope.ecloud.cordova.SmartLink"/>
            </feature>
        </config-file>
        <source-file src="src/android/SmartLink.java" target-dir="src/com/nodehope/ecloud/cordova"/>
    </platform>
</plugin>